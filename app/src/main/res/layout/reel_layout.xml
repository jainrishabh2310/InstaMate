<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    >

    <VideoView
        android:id="@+id/reel_video_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/reel_like_popup"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:layout_height="100dp"
        android:visibility="gone"
        android:src="@drawable/like_s"

        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:text="Reels"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/post_3_dots" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reel_user_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/reel_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/post_user_pic"
                app:layout_constraintTop_toTopOf="@id/post_user_pic"
                app:layout_constraintBottom_toBottomOf="@id/post_user_pic"
                app:layout_constraintEnd_toStartOf="@id/post_settings"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>



        </LinearLayout>

        <TextView
            android:id="@+id/reel_caption"
            android:layout_width="wrap_content"
            android:text="here is a Caption"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="24dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/reel_like_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/reel_like_us" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="100k"
            android:textStyle="bold"
            android:id="@+id/reel_like_count"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/reel_comment_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/reel_comment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:textStyle="bold"
            android:id="@+id/reel_comment_count"
            android:text="230k"
            android:textColor="#fff"
            android:textSize="13sp" />


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/reel_send" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:src="@drawable/reel_dot" />


    </LinearLayout>




</RelativeLayout>